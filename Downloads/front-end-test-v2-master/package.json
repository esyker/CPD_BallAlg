{
    "name": "frontend-hero-test",
    "version": "2.2.0",
    "description": "Mercedes-Benz.io Challenge for a Frontend Developers",
    "author": "Mercedes-Benz.io",
    "license": "UNLICENSED",
    "private": true,
    "scripts": {
        "postinstall": "npm run start",
        "start": "npm-run-all css serve",
        "css": "npm-run-all css:precompile",
        "css:precompile": "node-sass --include-path src/libs-polyfills --output-style expanded --output src src/styles.scss",
        "serve": "http-server ./src -s -c-1 -a localhost -o"
    },
    "devDependencies": {
        "http-server": "^0.12.1",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5"
    },
    "engines": {
        "node": ">=10.16.0"
    }
}
